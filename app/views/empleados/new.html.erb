  <% provide(:title, "Add employe") %>

  <div class="span8">
    <H1 class="text-center"s>Nuevo Empleado</H1>
    <%= form_for(:session, url: new_employee_path) do |f| %>
    <div class="col-md-6 col-md-offset-3 form-group input-wrapper">
        <%= f.label :name %>
        <%= f.text_field :name, :required => true, class: 'input-text' %>
    </div>
        <div class="col-md-6 col-md-offset-3 form-group input-wrapper">
        <%= f.label :lastname %>
        <%= f.text_field :lastname,:required => true, class: 'input-text' %>
    </div>
    </div>
        <div class="col-md-6 col-md-offset-3 form-group input-wrapper">
        <%= f.label :username %>
        <%= f.text_field :username, :required => true, class: 'input-text' %>
    </div>
    <div class="col-md-6 col-md-offset-3 form-group input-wrapper">
        <%= f.label :password %>
        <%= f.password_field :password, :required => true, class: 'input-text' %>
    </div>
     <div class="col-md-6 col-md-offset-3 form-group input-wrapper">
        <%= f.label :category %>
        <%= f.select :category, [[1], [2], [3],[4]], { label: "Selecciona la categoria:" }, { class: "selectpicker" } %>
    </div>
    <%= f.submit "Guardar Empleado", class: "col-md-6 col-md-offset-3 btn-material"%>

    <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <% end %>
  </div>