<H1 class="title">Todos los Proyectos</H1>

<div class="pre-scrollable">
    <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Fecha de inicio</th>
          <th>Fecha de final</th>
        </tr>
      </thead>
      <tbody>
      <% @proyectos.each do |p|%>
        <tr class="active">
          <td><%= p.nombre%></td>
          <td><%= p.fecha_inicio%></td>
          <td><%= p.fecha_fin%></td>
        </tr>  
      <tbody>
    <% end %>
    </table>
  </div>
</div>

<%= button_to('Crear nuevo proyecto', new_proyecto_url, remote: true, method: :get, :class => 'btn btn-large btn-primary col-md-4 text-center')  %>
