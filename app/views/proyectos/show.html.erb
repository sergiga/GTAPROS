<%= provide :breadcrum, "PROYECTO - " + @proyecto.nombre.upcase %>

<h1>Trabajadores</h1>
<div id="trabajadores">
  <div class="row">
    <div class="col-xs-3 table-row text-left">Nombre</div>
    <div class="col-xs-3 table-row text-left">Apellidos</div>
    <div class="col-xs-3 table-row text-left">Participacion</div>
  </div>
  <%= render @proyecto.asignacion_proyectos %>
</div>

<h1>Actividades</h1>
<div id="actividades">
  <div class="row">
    <div class="col-xs-1 table-row text-left">ID</div>
    <div class="col-xs-2 table-row text-left">Descripcion</div>
    <div class="col-xs-2 table-row text-left">Predesoras</div>
    <div class="col-xs-3 table-row text-left">Inicio</div>
    <div class="col-xs-3 table-row text-left">Fin</div>
    <div class="col-xs-1 table-row text-left"></div>
  </div>
  <%= render partial: "actividades_show", locals: {actividades: @proyecto.actividads, asignacion: @asignacion} %>
</div>
